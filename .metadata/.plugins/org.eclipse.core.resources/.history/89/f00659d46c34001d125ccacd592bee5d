
public class Main {

	public static void main(String[] args) {
		System.out.println("Hello world!");
		
		//değişken isimlendirmeleri java'da camelCase yazılır. kelimenin ilk harfi küçük, ikinci kelime büyük.
		String ortaMetin ="İlginizi Çekebilir";
		String altMetin ="Vade süresi";
		
		System.out.println(ortaMetin);
		
		//integer'dan geliyor. tam sayı demek.
		int vade = 12;
		
		double dolarDun = 18.20;
		double dolarBugun = 18.20;
		
		boolean dolarDustuMu = false;
		
		String okYonu = ""; 
		
		if (dolarBugun<dolarDun) { //true
			okYonu = "down.svg"; 
			System.out.println(okYonu);
			
		} else if(dolarBugun>dolarDun) {
		    okYonu = "up.svg"; 
			System.out.println(okYonu);
		}
		
		else {
			okYonu = "equal.svg"; 
			System.out.println(okYonu);
		}

		//array

        String[] krediler = {"Hızlı Kredi","Maaş Halkbank","Mutlu Emekli"};

        for (int i = 0; i < krediler.length; i++) {
            System.out.println(krediler[i]);	
	
	
	}
}
